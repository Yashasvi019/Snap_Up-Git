<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image2"
    tools:context=".VerifyPhoneRegister">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/background_image2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/mainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/autour_one"
                    android:gravity="center"
                    android:text="@string/otp_verification"
                    android:textColor="#031067"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.59"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/otpImage"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/otp_image2"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="@id/mainText"/>

                <TextView
                    android:id="@+id/otpSentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/an_otp_has_been_sent_on_your_number"
                    android:fontFamily="@font/boogaloo"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="#0724E8"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.59"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/otpImage" />

                <TextView
                    android:id="@+id/phoneNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/boogaloo"
                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="#1729A3"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@drawable/backgroundfill"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.59"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/otpSentText" />

                <TextView
                    android:id="@+id/otpTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="OTP is valid for 60 seconds i.e, for 1 minute only."
                    android:fontFamily="@font/boogaloo"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="#0724E8"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.59"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/phoneNumberText" />

                <TextView
                    android:id="@+id/otpEnterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/amiko"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="@string/enter_your_otp_here"
                    android:textColor="#0020F8"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.59"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/otpTimeText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="@id/otpEnterText">

                    <EditText
                        android:id="@+id/otpNumber1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:padding="2dp"
                        android:textColor="#040303"
                        android:textColorHint="#F3EEEE"
                        android:textSize="20sp"
                        android:background="@drawable/backgroundbox"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.62"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck"/>

                    <EditText
                        android:id="@+id/otpNumber2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:padding="2dp"
                        android:textColor="#040303"
                        android:textColorHint="#F3EEEE"
                        android:textSize="20sp"
                        android:background="@drawable/backgroundbox"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.62"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck"/>

                    <EditText
                        android:id="@+id/otpNumber3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:padding="2dp"
                        android:textColor="#040303"
                        android:textColorHint="#F3EEEE"
                        android:textSize="20sp"
                        android:background="@drawable/backgroundbox"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.62"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck"/>

                    <EditText
                        android:id="@+id/otpNumber4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:padding="2dp"
                        android:textColor="#040303"
                        android:textColorHint="#F3EEEE"
                        android:textSize="20sp"
                        android:background="@drawable/backgroundbox"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.62"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck"/>

                    <EditText
                        android:id="@+id/otpNumber5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:padding="2dp"
                        android:textColor="#040303"
                        android:textColorHint="#F3EEEE"
                        android:textSize="20sp"
                        android:background="@drawable/backgroundbox"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.62"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck"/>

                    <EditText
                        android:id="@+id/otpNumber6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:padding="2dp"
                        android:textColor="#040303"
                        android:textColorHint="#F3EEEE"
                        android:textSize="20sp"
                        android:background="@drawable/backgroundbox"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.62"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck"/>

                </LinearLayout>

                <Button
                    android:id="@+id/verifyOtp"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/verify_number"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:backgroundTint="#1976d2"
                    android:background="@drawable/backgroundbox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/otpNumber1"/>

                <TextView
                    android:id="@+id/resendOtpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/acme"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Didn't Recieve OTP? Click On Resend OTP Button."
                    android:textColor="#0020F8"
                    android:textSize="18sp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.59"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/verifyOtp" />

                <Button
                    android:id="@+id/resendOtp"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/resend_otp"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:backgroundTint="#1976d2"
                    android:visibility="invisible"
                    android:background="@drawable/backgroundbox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/resendOtpText"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:indeterminateDrawable="@drawable/gif_loader_img1"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@+id/verifyOtp" />

            </LinearLayout>

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>