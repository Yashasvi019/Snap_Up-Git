<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image6"
    tools:context=".Payment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#90caf9"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRazorpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/charmonman_bold"
                android:text="Powered  by "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/razorpay_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#64b5f6"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSnapUp"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/shopping_icon" />

            <TextView
                android:id="@+id/textSnapUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/aclonica"
                android:text="SNAP UP "
                android:textColor="#023A6E"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:background="#E8EBF3"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/calistoga"
                android:textColor="#DC5353"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPayStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/actor"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold|italic"
                android:padding="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:background="#032A91"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/payId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/adamina"
                android:padding="5dp"
                android:text="Transaction Details: "
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/textpayId1"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:fontFamily="@font/acme"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textPayId2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="6dp"
            android:fontFamily="@font/acme"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold|italic" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#6087F1"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/razorpayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/backgroundbox"
            android:paddingBottom="5dp"
            android:text="PAY USING RAZORPAY"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#1976d2"/>

        <Button
            android:id="@+id/continueShoppingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/backgroundbox"
            android:paddingBottom="5dp"
            android:text="CONTINUE SHOPPING"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#1976d2"/>

        <Button
            android:id="@+id/continuePayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/backgroundbox"
            android:paddingBottom="5dp"
            android:text="CONTINUE TO PAY"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#1976d2"/>

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/backgroundbox"
            android:paddingBottom="5dp"
            android:text="LOG OUT"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:backgroundTint="#1976d2"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:background="#6087F1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</ScrollView>